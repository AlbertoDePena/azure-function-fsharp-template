{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "clean",
			"command": "dotnet",
			"args": [
				"clean",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			// shell in Linux, process in Windows
			"type": "shell",
			"problemMatcher": "$msCompile"
		},
		{
			"label": "build",
			"command": "dotnet",
			"args": [
				"build",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			// shell in Linux, process in Windows
			"type": "shell",
			"dependsOn": "clean",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile"
		},
        {
			"label": "func",
			"command": "func",
            "args": [
                "host",
                "start"
            ],
            "options": {
				"cwd": "${workspaceFolder}/bin/Debug/netcoreapp3.1"
			},			
			// shell in Linux, process in Windows
			"type": "shell",
			"dependsOn": "build",
			"problemMatcher": "$msCompile"
		}
	]
}